<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <span class="picture">
    <%= f.file_field :picture %>
  </span>
  <div class="field">
    <%= f.text_area :content, placeholder: "コメントを入力してください" , class: "commentform"%>
  </div>
  <%= f.submit "Post", class: "btn btn-primary postform" %>
<% end %>