<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all',
                               'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application',
                               'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <p class='label-right'>Log in</p>
          <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
      
            <%= f.label :name , class: 'label-right'%>
            <%= f.text_field :name, class: 'form-control' %>
      
            <%= f.label :email , class: 'label-right'%>
            <%= f.email_field :email, class: 'form-control' %>
      
            <%= f.label :password , class: 'label-right'%>
            <%= f.password_field :password, class: 'form-control' %>
      
            <%= f.label :password_confirmation, "Confirmation" , class: 'label-right'%>
            <%= f.password_field :password_confirmation, class: 'form-control' , class: 'label-right'%>
      
            <%= f.submit "Create my account", class: "btn btn-primary" , class: 'label-right'%>
          <% end %>
          <p , class='label-right'>アカウントをお持ちですか？<%= link_to "ログインする", login_path %></p>
        </div>
      </div>
      <footer class="footer">
        <small>
          <a>© 2019 INSTAGRAM CLONE BY M.CHIBA</a>
        </small>
      </footer>
    <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>