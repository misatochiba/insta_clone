<div class="row">
  <aside class="col-md-4 profile">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= link_to "プロフィールを編集",edit_user_path(current_user) , class: 'profileletter'%>
        <%= link_to "ログアウト", logout_path, method: :delete , class: 'profileletter'%>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-4 profile">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
